<?xml version="1.0" encoding="UTF-8"?>
<database name="default" namespace="Tsp\AdminBundle\Model" defaultIdMethod="native">

<table name="flat">
    <vendor type="mysql">
        <parameter name="Engine" value="InnoDB"/>
        <parameter name="Charset" value="utf8"/>
    </vendor>
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
    <column name="description" type="varchar" size="100" />
    <column name="country" type="varchar" size="100" />
    <column name="city" type="varchar" size="100" />
    <column name="postcode" type="varchar" size="6" />
    <column name="street" type="varchar" size="30" />
    <column name="number" type="varchar" size="5" />
    <column name="floor" type="varchar" size="5" />
</table>

<table name="room">
    <vendor type="mysql">
        <parameter name="Engine" value="InnoDB"/>
        <parameter name="Charset" value="utf8"/>
    </vendor>
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
    <column name="description" type="varchar" primaryString="1" size="100" />
    <column name="flat_id" type="integer" />
    <foreign-key foreignTable="flat">
        <reference local="flat_id" foreign="id" />
    </foreign-key>
</table>

<table name="bed">
    <vendor type="mysql">
        <parameter name="Engine" value="InnoDB"/>
        <parameter name="Charset" value="utf8"/>
    </vendor>
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
    <column name="type" type="enum" required="true" valueSet="Sofa, Single, TWW"/>
    <column name="room_id" type="integer" />
    <foreign-key foreignTable="room">
        <reference local="room_id" foreign="id" />
    </foreign-key>
</table>

<table name="customer">
    <vendor type="mysql">
        <parameter name="Engine" value="InnoDB"/>
        <parameter name="Charset" value="utf8"/>
    </vendor>
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
    <column name="username" type="varchar" primaryString="1" size="10" />
    <column name="email" type="varchar" required="true" primaryString="1" size="100" />
    <column name="password" type="varchar" required="true" primaryString="1" size="100" />
    <column name="salt" type="varchar" primaryString="1" size="32" />
</table>

<table name="booking">
    <vendor type="mysql">
        <parameter name="Engine" value="InnoDB"/>
        <parameter name="Charset" value="utf8"/>
    </vendor>
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
    <column name="start_date" type="date" required="true" />
    <column name="end_date" type="date" required="true" />
    <column name="customer_id" type="integer" />
    <column name="bed_id" type="integer" />
    <foreign-key foreignTable="customer">
        <reference local="customer_id" foreign="id" />
    </foreign-key>
    <foreign-key foreignTable="bed">
        <reference local="bed_id" foreign="id" />
    </foreign-key>
</table>

<table name="user">
    <vendor type="mysql">
        <parameter name="Engine" value="InnoDB"/>
        <parameter name="Charset" value="utf8"/>
    </vendor>
    <column name="id" type="integer" required="true" primaryKey="true" autoIncrement="true" />
    <column name="username" type="varchar" primaryString="1" size="10" />
    <column name="email" type="varchar" required="true" primaryString="1" size="100" />
    <column name="password" type="varchar" required="true" primaryString="1" size="100" />
    <column name="salt" type="varchar" primaryString="1" size="32" />
    <column name="is_active" type="boolean" />
</table>

</database>
