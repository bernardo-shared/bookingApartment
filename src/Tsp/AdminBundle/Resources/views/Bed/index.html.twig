{% extends "AdminBundle::layout.html.twig" %}

{% block content %}

    <h1>List Beds</h1>

    <!-- BEGIN MESSAGE -->
    {% if app.session.hasFlash('notice') %}
    <div class="alert">
        <button type="button" class="close" data-dismiss="alert" onclick="jQuery('.alert').fadeOut('slow')">&times;</button>
        <strong>Notice</strong> {{ app.session.flash('notice') }}
    </div>
    {% endif %}
    <!-- END MESSAGE -->

    <table class="table">
        <thead>
        <tr>
            <th>Bed-ID</th>
            <th>Type</th>
            <th>Room</th>
        </tr>
        </thead>
        <tbody>
        {% for bed in beds %}
        <tr>
            <td><a href="{{ path('edit_bed', {id: bed.id}) }}">#{{ bed.id }}</a></td>
            <td>{{ bed.type }}</td>
            <td><a href="{{ path('show_room', {id: bed.Room.id }) }}">{{ bed.Room.description }} (Id: {{ bed.Room.id }})</a></td>
            <td>
                <a href="{{ path('delete_bed', {id: bed.id}) }}" class="btn btn-danger" type="button" >Delete</a>
                <a href="{{ path('edit_bed', { id: bed.id }) }}" class="btn" type="button">Edit</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}