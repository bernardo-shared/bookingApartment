{% extends "FrontBundle::base.html.twig" %}

{% block head %}
    {{ parent() }}
    {% block title %}Home Page{% endblock %}
{% endblock %}

{% block navigation %}
    <div class="nav-collapse">
        <ul class="nav pull-right">
            <li><a href="{{ path('register') }}">Sign Up</a></li>
            <li class="divider-vertical"></li>
            <li class="dropdown">
                <a class="dropdown-toggle" href="#" data-toggle="dropdown">Sign In <strong class="caret"></strong></a>
                <div class="dropdown-menu">
                    <form action="{{ path('customer') }}" method="post" {{ form_enctype(login) }}>
                        {{ form_widget(login) }}
                        <input id="user_remember_me" type="checkbox" name="" value="1" />
                        <label class="string optional" for="user_remember_me"> Remember me</label>

                        <input class="btn btn-success" type="submit" name="commit" value="Sign In" />
                    </form>
                </div>
            </li>
        </ul>
    </div>
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3 well">

            </div>
            <div class="span9 list_flats">
                <ul class="thumbnails">
                    {% for flat in flats %}
                        <li class="span12">
                            <div class="thumbnail">
                                <div class="row-fluid">
                                    <div class="span4">
                                        <img src="{{ asset('bundles/front/images/room.jpg') }}" class="img-rounded">
                                    </div>
                                    <div class="span5">
                                        <h3>{{ flat.description }}</h3>
                                        <address>
                                            <strong>{{ flat.street }}, {{ flat.number }}</strong><br>
                                            {{ flat.city }}, {{ flat.country }} {{ flat.postcode }}<br>
                                        </address>
                                    </div>
                                    <div class="span3 bleft">
                                        <form action="{{ path('flat_details', {id: flat.id}) }}" method="POST">
                                            <span>From</span>
                                            <div class="input-append date form_datetime">
                                                <input name="start_date" size="16" type="text" value="" required="required">
                                                <span class="add-on"><i class="icon-calendar"></i></span>
                                            </div>
                                            <span>To</span>
                                            <div data-date-viewmode="years" class="input-append date form_datetime">
                                                <input  name="end_date" size="16" type="text" value="" required="required">
                                                <span class="add-on"><i class="icon-calendar"></i></span>
                                            </div>
                                            <input type="hidden" name="flat_id" value="{{ flat.id }}">
                                            <button type="submit" class="btn btn-success">Book apartment</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}